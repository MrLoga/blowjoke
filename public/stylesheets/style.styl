body
  padding: 0px;
  margin: 0;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
  background: #ededed;
a
  color: #00B7FF

.wraper {
  width: 100%;
  &__block {
    width: 964px;
    margin: 0 auto;
    position: relative;
  }
  &__content {
    width: 680px;
    margin-right: 285px;
  }
  &__aside {
    float: right;
    width: 225px;
  }
}

.header {
  height: 80px;
  position: relative;
  &__wrap {
    background: #fff;
  }
  &__logo {
    height: 30px;
    width: 130px;
    position: absolute;
    top: 25px;
    text-decoration: none;
    &-img {
      float: left;
    }
    &-text {
      float: left;
      margin-left: 10px;
      font: bold 22px "PT Sans";
      color: #363636;
    }
  }
}



.post {
  &__create {
    height: 70px;
    &_hidden {
      display: none;
    }
    &-input {
      position: relative;
      border: 1px solid #d5d5d5;
      border-radius: 5px;
      height: 48px;
      width: 100%;
      padding: 12px 40px 12px 20px;
      resize: none;
      font: 16px "PT Sans";
      color: #363636;
      z-index: 2;
      &-wrap {
        margin: 30px 0;
        padding: 0 0 60px;
        position: relative;
      }
      &-photo {
        background: url("../img/post_create-photo.png") no-repeat 0 100%;
        width: 24px;
        height: 22px;
        position: absolute;
        right: 11px;
        top: 14px;
        cursor: pointer;
        z-index: 5;
        &:hover {
          background-position: 0 0;
        }
      }
    }
    &-submit {
      padding: 9px 17px;
      background-color: #ff4242;
      border-radius: 5px;
      color: #fff;
      border: none;
      position: absolute;
      bottom: 10px;
      left: 20px;
      font: bold 16px "PT Sans";
      cursor: pointer;
      &:hover {
        background-color: #ff5555;
      }
      &-wrap {
        position: absolute;
        top: 0;
        height: 110px;
        z-index: 1;
        width: 100%;
        background-color: #ededed;
        visibility: hidden;
        box-shadow: 0 0 5px #aaa;
        border-radius: 5px;
      }
      &-img {
        position: absolute;
        bottom: 3px;
        right: 20px;
        height: 50px;
      }
    }
  }
  &__list {
    &-item {
      margin: 10px 0 0px;
      padding: 10px 0 5px;
      border-bottom: 1px solid #aaa;
      background-color: #ededed;
      -webkit-transition: background-color 1000ms linear;
      -moz-transition: background-color 1000ms linear;
      -o-transition: background-color 1000ms linear;
      -ms-transition: background-color 1000ms linear;
      transition: background-color 1000ms linear;
      &_new {
        background-color: #fee;
      }
    }
  }
}